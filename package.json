{
  "name": "routing-controllers-openapi",
  "version": "1.3.1",
  "description": "Runtime OpenAPI v3 spec generation for routing-controllers",
  "keywords": [
    "routing-controllers",
    "class-validator",
    "openapi",
    "swagger"
  ],
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "repository": "git@github.com:epiphone/routing-controllers-openapi",
  "author": "Aleksi Pekkala <aleksipekkala@gmail.com>",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf coverage build",
    "build": "yarn clean && tsc -p tsconfig.release.json",
    "format": "prettier --write {src,test}/**/*.ts",
    "lint": "tslint --project . --type-check src/**/*.ts",
    "prepare": "yarn build",
    "send-coverage": "codecov -f coverage/*.json",
    "test": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "dependencies": {
    "debug": "^3.1.0",
    "lodash": "^4.17.10",
    "openapi3-ts": "^0.12.0",
    "path-to-regexp": "^2.2.1",
    "reflect-metadata": "^0.1.12",
    "routing-controllers": "^0.7.7",
    "tslib": "^1.9.2",
    "class-validator": "^0.8.5",
    "class-validator-jsonschema": "^1.1.1"
  },
  "devDependencies": {
    "@types/debug": "^0.0.30",
    "@types/jest": "^23.1.0",
    "@types/lodash": "^4.14.109",
    "@types/node": "^10.3.3",
    "@types/prettier": "^1.13.1",
    "@types/reflect-metadata": "^0.1.0",
    "@types/rimraf": "^2.0.2",
    "codecov": "^3.0.2",
    "jest": "^23.1.0",
    "prettier": "1.13.5",
    "rimraf": "^2.6.2",
    "ts-jest": "^22.4.6",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.13.0",
    "tslint-config-standard": "^7.0.0",
    "tsutils": "^2.27.1",
    "typescript": "^2.9.2"
  }
}
