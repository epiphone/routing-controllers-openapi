{
  "name": "routing-controllers-openapi",
  "version": "2.2.0",
  "description": "Runtime OpenAPI v3 spec generation for routing-controllers",
  "keywords": [
    "routing-controllers",
    "class-validator",
    "openapi",
    "swagger"
  ],
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "repository": "git@github.com:epiphone/routing-controllers-openapi",
  "author": "Aleksi Pekkala <aleksipekkala@gmail.com>",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf coverage build",
    "build": "yarn clean && tsc -p tsconfig.release.json",
    "format": "prettier --write {src,__tests__}/**/*.ts",
    "test:format": "prettier --check {src,__tests__}/**/*.ts",
    "lint": "tslint --project . src/**/*.ts",
    "prepare": "install-self-peers -- --frozen-lockfile --ignore-scripts && yarn build",
    "send-coverage": "codecov -f coverage/*.json",
    "test": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "dependencies": {
    "lodash": "^4.17.15",
    "openapi3-ts": "^1.3.0",
    "path-to-regexp": "^2.2.1",
    "reflect-metadata": "^0.1.13",
    "tslib": "^1.11.1"
  },
  "devDependencies": {
    "@team-griffin/install-self-peers": "^1.1.1",
    "@types/jest": "^25.2.1",
    "@types/lodash": "^4.14.150",
    "@types/node": "^13.13.4",
    "@types/prettier": "^2.0.0",
    "@types/reflect-metadata": "^0.1.0",
    "@types/rimraf": "^3.0.0",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.12.2",
    "class-validator-jsonschema": "^2.2.0",
    "codecov": "^3.6.1",
    "jest": "^25.5.3",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^25.4.0",
    "tslint": "^6.1.2",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^9.0.0",
    "typescript": "^3.8.3"
  },
  "peerDependencies": {
    "routing-controllers": "^0.9.0"
  }
}
