{
  "name": "routing-controllers-openapi",
  "version": "1.5.0",
  "description": "Runtime OpenAPI v3 spec generation for routing-controllers",
  "keywords": [
    "routing-controllers",
    "class-validator",
    "openapi",
    "swagger"
  ],
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "repository": "git@github.com:epiphone/routing-controllers-openapi",
  "author": "Aleksi Pekkala <aleksipekkala@gmail.com>",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf coverage build",
    "build": "yarn clean && tsc -p tsconfig.release.json",
    "format": "prettier --write {src,test}/**/*.ts",
    "lint": "tslint --project . --type-check src/**/*.ts",
    "prepare": "yarn build",
    "send-coverage": "codecov -f coverage/*.json",
    "test": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "dependencies": {
    "debug": "^3.1.0",
    "lodash": "^4.17.10",
    "openapi3-ts": "^1.2.0",
    "path-to-regexp": "^2.2.1",
    "reflect-metadata": "^0.1.12",
    "routing-controllers": "^0.7.7",
    "tslib": "^1.9.3"
  },
  "devDependencies": {
    "@types/debug": "^0.0.30",
    "@types/jest": "^23.3.1",
    "@types/lodash": "^4.14.116",
    "@types/node": "^10.5.8",
    "@types/prettier": "^1.13.2",
    "@types/reflect-metadata": "^0.1.0",
    "@types/rimraf": "^2.0.2",
    "class-validator": "^0.8.5",
    "class-validator-jsonschema": "^1.1.3",
    "codecov": "^3.0.4",
    "jest": "^23.5.0",
    "prettier": "^1.14.2",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.1.3",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^8.0.1",
    "tsutils": "^3.0.0",
    "typescript": "^3.3.1"
  }
}
